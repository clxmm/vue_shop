<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.clxmm.vueshopservice.mapper.RolesMapper">
  <resultMap id="BaseResultMap" type="org.clxmm.vueshopservice.domian.Roles">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <collection property="rightsList" ofType="org.clxmm.vueshopservice.domian.Rights">
      <result column="rid" jdbcType="BIGINT" property="id"></result>
      <result column="rname" jdbcType="VARCHAR"  property="name"></result>
      <result column="path" jdbcType="VARCHAR" property="path"></result>
      <result column="pid" jdbcType="VARCHAR" property="pid"></result>
      <result column="level" jdbcType="VARCHAR" property="level"></result>

    </collection>

  </resultMap>









  <select id="getAllRoles" resultMap="BaseResultMap">
      SELECT
      r.*,
      ri.name as rname,
      ri.path,
      ri.pid

  FROM
      roles AS r
      LEFT JOIN role_rig AS rr ON r.id = rr.role_id
      LEFT JOIN rights as ri on ri.id = rr.rig_id

  </select>


</mapper>